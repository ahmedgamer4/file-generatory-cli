<?xml version="1.0" encoding="UTF-8"?>
<CORSConfiguration xmlns="http://s3.amazonaws.com/doc/2006-03-01/">
    <CORSRule>
        <AllowedOrigin>*</AllowedOrigin> <!-- Allow all domains -->
        <AllowedMethod>GET</AllowedMethod> <!-- Allow GET requests -->
        <AllowedMethod>POST</AllowedMethod> <!-- Allow POST requests -->
        <AllowedMethod>PUT</AllowedMethod> <!-- Allow PUT requests -->
        <AllowedHeader>*</AllowedHeader> <!-- Allow all headers -->
        <ExposeHeader>ETag</ExposeHeader> <!-- Expose specific headers (optional) -->
    </CORSRule>
    <CORSRule>
        <AllowedOrigin>https://example.com</AllowedOrigin> <!-- Allow a specific domain -->
        <AllowedMethod>GET</AllowedMethod>
        <AllowedHeader>*</AllowedHeader>
    </CORSRule>
</CORSConfiguration>
